!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      =h(yield("headshift")) || controller.action_name
    = stylesheet_link_tag :all 
    = javascript_include_tag 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #banner
      %h1
        Headshift Supermercado
    #container
      - flash.each do |name, msg|
        - content_tag :div, msg, :id => "flash_#{name}"
    #user_nav
      .underlinemenu
        %ul
          %li
            = link_to 'Products', :controller => 'products'
          %li
            = link_to 'Line Items', :controller => 'line_items'
          %li
            = link_to 'Baskets', :controller => 'baskets'
          %li
            = link_to 'Checkouts', :controller => 'checkouts'
    %p.flash_notice
      = flash[:notice]
    %p.flash_warn
      = flash[:warning]
    %p.flash_error
      = flash[:error]
    .content
      = yield  :layout
